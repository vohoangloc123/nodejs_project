const Course = require('../models/Course');
const mongooseUtil = require('../../util/mongoose'); // Import the entire module
const { multipleMongooseToObject } = mongooseUtil; // Use the specific property
const { mongooseToObject } = mongooseUtil; // Use the specific property
class CourseController {
  //[GET] /courses/:slug
  show(req, res, next) {
    Course.findOne({ slug: req.params.slug }).then ((course) => {
        res.render('courses/show', { course: mongooseUtil.mongooseToObject(course) });
    }).catch(next);
  }
  //[GET] /courses/create
  create(req, res, next) {
    res.render('courses/create');
  }
  //[POST] /courses/stor
  store(req, res, next) {
    const formData=req.body;
    formData.image = `https://img.youtube.com/vi/${req.body.videoID}/sddefault.jpg`;
    const course = new Course(formData);
    course.save().then(() => res.redirect('/')).catch(error => {Console.log(error)});
  }
}
module.exports = new CourseController();
